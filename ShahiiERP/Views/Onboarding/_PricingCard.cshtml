@model dynamic

<div class="col-xxl-3 col-xl-6 col-lg-6 col-md-6 col-sm-12">
    <div class="card custom-card overflow-hidden @(Model.Highlight ? "border border-primary" : "")">
        <div class="card-body p-0">
            <div class="px-1 py-2 @(Model.Highlight ? "bg-primary op-5" : "bg-success op-3")"></div>
            <div class="p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="fs-18 fw-semibold">@Model.Name</div>
                    <div><span class="badge @(Model.Highlight ? "bg-primary-transparent" : "bg-success-transparent")">@Model.Badge</span></div>
                </div>

                <div class="fs-25 fw-bold mb-1">
                    @(Model.IsFree ? "$0" : $"${Model.Price}")
                    <sub class="text-muted fw-semibold fs-11 ms-1">@Model.BillingLabel</sub>
                </div>

                <div class="d-grid mt-4">
                    <a href="/onboarding/signup?plan=@Model.PlanId" class="btn @(Model.Highlight ? "btn-primary" : "btn-light")">
                        Choose Plan
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


@model ShahiiERP.Domain.Models.Onboarding.RegisterTenantVM
@{
    ViewData["Title"] = "Sign Up";
    Layout = "_LayoutPublic";
}

<div class="row authentication mx-0">

    <div class="col-xxl-7 col-xl-7 col-lg-12">
        <div class="row justify-content-center align-items-center h-100">
            <div class="col-xxl-6 col-xl-7 col-lg-7 col-md-7 col-sm-8 col-12">
                <form method="post" asp-action="Signup" asp-controller="Onboarding" autocomplete="off">
                    @Html.AntiForgeryToken()

                    <input type="hidden" asp-for="PlanId" />
                <div class="p-5">
                    <div class="mb-3">
                        <a href="index.html">
                            <img src="../assets/images/brand-logos/desktop-logo.png" alt="" class="authentication-brand desktop-logo">
                            <img src="../assets/images/brand-logos/desktop-dark.png" alt="" class="authentication-brand desktop-dark">
                        </a>
                    </div>
                    <p class="h5 fw-semibold mb-2">Sign Up</p>
                        <p class="mb-3 text-muted op-7 fw-normal">Welcome & Join us by creating a free account !</p>
                        <p class="text-muted">
                            Manage students, staff, billing, timetables, and reporting — all in one ERP.
                        </p>
                    <div class="btn-list">
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                Please correct the errors below.
                            </div>
                        }
                    </div>
                    <div class="text-center my-5 authentication-barrier">
                        
                    </div>
                    <div class="row gy-3">
                        <div class="col-xl-12 mt-0">
                            <label asp-for="SchoolName" class="form-label text-default"></label>
                            <input asp-for="SchoolName" class="form-control form-control-lg" placeholder="Enter school name">
                            <span asp-validation-for="SchoolName" class="text-danger small"></span>
                        </div>
                        <div class="col-xl-12">
                            <label asp-for="Email" class="form-label text-default"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter email">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>
                        <div class="col-xl-12">
                            <label asp-for="Phone" class="form-label text-default"></label>
                            <input asp-for="Phone" class="form-control" placeholder="Enter phone (optional)">
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>
                        <div class="col-xl-12">

                            <label asp-for="AdminName" class="form-label text-default">Admin User Name</label>
                            <input asp-for="AdminName" class="form-control" placeholder="Enter User name">
                            <span asp-validation-for="AdminName" class="text-danger small"></span>
                        </div>
                        <div class="col-xl-12">
                            <label asp-for="Password" class="form-label text-default"></label>
                            <div class="input-group">
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password">
                                <button class="btn btn-light" onclick="createpassword('signup-password',this)" type="button" id="button-addon2"><i class="ri-eye-off-line align-middle"></i></button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        <div class="col-xl-12 mb-3">
                            @* <label for="signup-confirmpassword" class="form-label text-default">Confirm Password</label>
                            <div class="input-group">
                                <input type="password" class="form-control form-control-lg" id="signup-confirmpassword" placeholder="confirm password">
                                <button class="btn btn-light" onclick="createpassword('signup-confirmpassword',this)" type="button" id="button-addon21"><i class="ri-eye-off-line align-middle"></i></button>
                            </div> *@
                            <div class="form-check mt-3">
                                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                                <label class="form-check-label text-muted fw-normal" for="defaultCheck1">
                                    By creating a account you agree to our <a href="terms_conditions.html" class="text-success"><u>Terms & Conditions</u></a> and <a class="text-success"><u>Privacy Policy</u></a>
                                </label>
                            </div>
                        </div>
                        <div class="col-xl-12 d-grid mt-2">
                            <button type="submit" class="btn btn-lg btn-primary">Create Account</button>
                        </div>
                    </div>
                    <div class="text-center mt-4">
                        <span class="text-muted">Already have an account?</span>
                        <a href="/account/login" class="text-primary">Sign In</a>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col-xxl-5 col-xl-5 col-lg-5 d-xl-block d-none px-0">
        <div class="authentication-cover">
            <div class="aunthentication-cover-content rounded">

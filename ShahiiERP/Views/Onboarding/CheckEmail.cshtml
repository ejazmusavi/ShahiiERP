@{
    ViewData["Title"] = "Verify Your Email";
    var email = ViewBag.Email as string;
    Layout = "_LayoutPublic";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height:70vh;">
    <div class="col-md-8 col-lg-6">
        <div class="card p-5 text-center">
            <h3 class="fw-semibold mb-3">Check Your Email</h3>
            <p class="text-muted">
                We sent a verification link to
            </p>
            <p class="fw-semibold fs-5">@email</p>

            <p class="text-muted mt-2">
                Click the link in your inbox to activate your account.
            </p>

            <div class="mt-4">
                <a href="/login" class="btn btn-outline-secondary" disabled>Continue to login</a>
            </div>

            <div class="mt-3 small text-muted">
                Didn't receive the email?
                <a href="#" class="ms-1">Resend</a> <!-- optional, wire later -->
            </div>
        </div>
    </div>
</div>

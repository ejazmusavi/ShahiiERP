<div class="switcher-wrapper">
    <div class="demo-icon">
        <i class="fe fe-settings fa-spin"></i>
    </div>

    <div class="switcher-body">

        <div class="switcher-header">
            <h5>Theme Customizer</h5>
            <a class="switcher-close"><i class="fe fe-x"></i></a>
        </div>

        <div class="switcher-section">
            <h6>Theme Mode</h6>
            <div class="buttons-row">
                <button data-theme-mode="light" class="btn btn-primary w-100 my-1">Light</button>
                <button data-theme-mode="dark" class="btn btn-dark w-100 my-1">Dark</button>
            </div>
        </div>

        <div class="switcher-section">
            <h6>Direction</h6>
            <div class="buttons-row">
                <button data-dir="ltr" class="btn btn-outline-primary w-100 my-1">LTR</button>
                <button data-dir="rtl" class="btn btn-outline-secondary w-100 my-1">RTL</button>
            </div>
        </div>

        <div class="switcher-section">
            <h6>Layout Width</h6>
            <div class="buttons-row">
                <button data-layout="full" class="btn btn-outline-primary w-100 my-1">Full Width</button>
                <button data-layout="boxed" class="btn btn-outline-secondary w-100 my-1">Boxed</button>
            </div>
        </div>

        <div class="switcher-section">
            <h6>Menu Style</h6>
            <div class="buttons-row">
                <button data-menu="vertical" class="btn btn-outline-primary w-100 my-1">Vertical</button>
                <button data-menu="horizontal" class="btn btn-outline-secondary w-100 my-1">Horizontal</button>
                <button data-menu="icon" class="btn btn-outline-secondary w-100 my-1">Icon Menu</button>
            </div>
        </div>

        <div class="switcher-section">
            <h6>Accent Colors</h6>
            <div class="switcher-colors">
                <span data-color="primary" class="color-box bg-primary"></span>
                <span data-color="secondary" class="color-box bg-secondary"></span>
                <span data-color="success" class="color-box bg-success"></span>
                <span data-color="info" class="color-box bg-info"></span>
                <span data-color="warning" class="color-box bg-warning"></span>
                <span data-color="danger" class="color-box bg-danger"></span>
            </div>
        </div>

        <div class="switcher-footer">
            <button class="btn btn-danger w-100" id="reset-theme">Reset to Default</button>
        </div>

    </div>
</div>

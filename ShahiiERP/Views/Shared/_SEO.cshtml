@{
    var title = "School ERP – School, College & University Management Software";
    var description = "Shahii ERP is a cloud-based education management system for schools, colleges, and universities. Automate admissions, attendance, fees, exams, reports, communication, LMS, HR & payroll in one platform.";
    var url = "https://your-domain.com";
    var image = "https://your-domain.com/assets/img/hero-dashboard.png";
}

<title>@title</title>
<meta name="description" content="@description" />

<!-- Primary SEO -->
<meta name="keywords" content="School ERP, College ERP, University ERP, Student Management System, Education ERP, SIS, School Information System, Fee Management System, Attendance Software, Learning Management Software, Academic Reporting, Education Billing Software" />
<meta name="robots" content="index,follow" />

<!-- OpenGraph (Facebook, LinkedIn) -->
<meta property="og:title" content="@title" />
<meta property="og:description" content="@description" />
<meta property="og:type" content="website" />
<meta property="og:url" content="@url" />
<meta property="og:image" content="@image" />

<!-- Twitter Cards -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="@title" />
<meta name="twitter:description" content="@description" />
<meta name="twitter:image" content="@image" />

<!-- Canonical -->
<link rel="canonical" href="@url" />

